{% extends standalone ? ':app:layout_empty.html.twig' : ':app:layout_main.html.twig' %}

{% block main_content %}
    <div class="modal fade" id="modalDelete{{ data.id }}" tabindex="-1" role="dialog"
         aria-labelledby="modalDelete{{ data.id }}">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-label="{{ 'action.close'|trans }}">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"
                        id="modalLabelDelete{{ data.id }}">{{ 'app.utilisateur.delete.title'|trans }}</h4>
                </div>
                <div class="modal-body">
                    <p class="text-danger">
                        {{ 'app.utilisateur.delete.text'|trans }} <b>{{ data.fullname }}</b> ?<br/>
                    </p>
                </div>
                <div class="modal-footer">
                    {{ form_start(form) }}
                    {{ form_rest(form) }}
                    {{ button_cancel(true) }}
                    {{ button_delete('submit_delete' ~ data.id, true, 'submit') }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}